 <script>
  const pesoInput = document.getElementById('peso');
  const metodoSelect = document.getElementById('metodo');
  const btnCalcular = document.getElementById('btnCalcular');
  const resultadoDiv = document.getElementById('resultado');
  const TARIFAS = { air: 6.5, sea: 2.6 };

  function calcular() {
    let valor = (pesoInput.value || '').trim().replace(',', '.');
    // limpiar caracteres extras
    valor = valor.replace(/[^0-9.]/g, '');
    pesoInput.value = valor;

    const peso = parseFloat(valor);
    if (isNaN(peso) || peso <= 0) {
      resultadoDiv.innerHTML = '<div class="error">Por favor ingres√° un peso v√°lido (mayor a 0).</div>';
      return;
    }

    const metodo = metodoSelect.value;
    const tarifa = TARIFAS[metodo];
    const total = (peso * tarifa).toFixed(2);

    resultadoDiv.innerHTML = `
      Total estimado: <strong>$${total} USD</strong>
      <div style="font-size:14px;color:#555;margin-top:6px;">
        (${peso} lb √ó $${tarifa} por libra ‚Äî ${metodo === 'air' ? 'A√©reo' : 'Mar√≠timo'})
      </div>
    `;
  }

  btnCalcular.addEventListener('click', calcular);
  pesoInput.addEventListener('keydown', function(e){
    if(e.key === 'Enter'){ e.preventDefault(); calcular(); }
  });
  metodoSelect.addEventListener('change', function(){
    if(pesoInput.value && !isNaN(parseFloat(pesoInput.value.replace(',','.')))) calcular();
  });
</script>


